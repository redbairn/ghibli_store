<%= 
# This is a partial rendered after the main page - used when you click on Edit / New
# This loop below is for iterating through the errors - that stop the product from being saved.
 form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
  
        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :product_title, :type =>"text", :required => 'required' %>
    </div>
  
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :product_description, :type =>"text", :required => 'required' %>
    </div>
    
    <div class="field">
      <%= form.label :colour %>
      <%= form.text_area :colour, id: :product_colour, :type =>"text", :required => 'required' %>
    </div>
  
    <div class="field">
      <%= form.label :cost_price %>
      <%= form.text_field :cost_price, id: :product_price, :type =>"text", :required => 'required' %>
    </div>
  
    <div class="field">
      <%= form.label :image_url %>
      <%= form.text_field  :image_url, id: :product_image_url, :required => 'required' %>
    </div>
    
    <div class="field">
      <%= form.label :category %>
      <%= form.text_field :category, id: :product_category, :type =>"text", :required => 'required' %>
    </div>
    
    <div class="field">
      <%= form.label :supplier_id %>
      <%= form.text_field :supplier_id, id: :product_supplier_id, :type =>"text", :required => 'required' %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
