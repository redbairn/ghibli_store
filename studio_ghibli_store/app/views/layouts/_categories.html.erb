<h1>Categories</h1>
<br>

 <% @categories.each do |category| %>
       <div class="producthols">
           <%= link_to (image_tag category.image, :class=>"productholsIm"), category %>
           <p><%= category.description %></p>
            
           <p><a href="/category/<%= category.id %>" class="button"><%= category.title %></a></p>
           
         </div>
    
    <% end %>